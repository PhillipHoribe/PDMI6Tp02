<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tp022.View.ProdutoView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Entry Text="{Binding id}" Placeholder="Id"/>
                <Entry Text="{Binding descricao}" Placeholder="Descrição"/>
                <Entry Text="{Binding categoria}" Placeholder="Categoria"/>
                <Entry Text="{Binding quantidade}" Placeholder="Quantidade"/>
                <Entry Text="{Binding preco}" Placeholder="Preço"/>
                <Button Text="Produto Digitado" Command="{Binding SimplesCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>